#! /usr/bin/env sh

check_distfile() {
	if test -f "$PWD/Distfile"; then
		return 0
	fi
	return 1
}

setup_workdir() {
	DIR=$(mktemp -d -p "$PWD")

	for dir in bootstrap bootimage initramfs distfiles; do
		mkdir -p "$DIR/$dir"
	done
}

clean_workdir() {
	grep -qs "$DIR" "/proc/mounts" || rm -r -f "$DIR"
}

main() {
	setup_workdir

	build

	clean_workdir
}

if check_distfile; then
	. "$PWD/Distfile"
fi

main "$@"
